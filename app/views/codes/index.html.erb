<p id="notice"><%= notice %></p>

<h1>Hsodes</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Hscode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><%= code.country %></td>
        <td><%= code.hscode %></td>
        <td><div class="actions"> <%= link_to 'Submit', code %></div></td>
        #<td><%= link_to 'Edit', edit_code_path(code) %></td>
        #<td><%= link_to 'Destroy', code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h3>RESULT </h3>
  <% @countries.each do |country| %>
    <% if country["country"]==code.country %>
      <div class="row"> 
          <div class="col">
              <p class="font-weight-light" style="color:#FFD700	"> <%= country["hscode"] %></p>
          </div>
          <div class="col">
              <p class="font-weight-light" style="color:#FFD700"><%= country["discription"] %> </p>
          </div>
      </div>
    <% end %>
    <% if country["hscode"]==code.hscode %>
      <div class="row"> 
          <div class="col">
              <p class="font-weight-light" style="color:#FFD700	"> <%= country["hscode"] %></p>
          </div>
          <div class="col">
              <p class="font-weight-light" style="color:#FFD700"><%= country["discription"] %> </p>
          </div>
      </div>
    <% end %>
  <% end%>

<br>

